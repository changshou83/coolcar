page {
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
/* heading */
.heading {
  display: flex;
  align-items: center;
  justify-content: flex-end;

  margin-bottom: 15rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 14rpx rgb(220, 220, 220);
}

.heading-title {
  position: absolute;
  left: 50rpx;
  
  font-weight: bold;
}

.heading-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatar-img-container:not([size=mini]) {
  width: 80rpx;
  height: 80rpx;
  padding:0;
  border-radius: 50%;
}

/* main */
/* main - left */
.left-nav {
  width: 200rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 14rpx rgb(220, 220, 220);
}

.left-nav .cu-item {
  height: 90rpx !important;
}

.cur-day {
  font-size: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 10rpx rgb(201, 201, 201);
}

.cur-day view {
  width: 100%;
  text-align: center;
}

.cur-day::after {
  content: "";
  width: 8rpx;
  height: 40rpx;
  /* margin: auto; */
  border-radius: 10rpx 0 0 10rpx;
  
  position: relative;
  top: 0;
  right: 0;
  bottom: 0;
  
  background-color: var(--green);
}

/* main-right */
.trip {
  border-radius: 16rpx;
  box-shadow: 0 0 14rpx rgb(220, 220, 220);
}
